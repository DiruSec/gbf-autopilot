{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "pythonPath": "${config:python.pythonPath}",
      "program": "${workspaceFolder}/controller/controller.py",
      "cwd": "${workspaceFolder}",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [
        "RedirectOutput"
      ]
    },
    {
      "name": "Node: Attach",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "port": 9229
    },
    {
      "name": "Node",
      "type": "node",
      "request": "launch",
      "sourceMaps": true,
      "program": "${workspaceFolder}/server/server.js"
    }
  ]
}
